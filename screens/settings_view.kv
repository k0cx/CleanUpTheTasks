<SettingsView>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: 2
        padding_vertical: 0
        # adaptive_height: True

        MDLabel:
            text: "Sync settings cloud.mail.ru WebDav"
            color: 0, 0, 0, 1
            halign: "center"
            font_size: "14sp"            
        
        MDTextField:
            id: host_field
            text: "https://"
            text_color_normal: 0, 0, 0, 1
            hint_text: "host address (https://webdav.example.org)"
            icon_left: "web"
            size_hint_x: .9
            pos_hint: {"center_x": .5, "center_y": .5}

        MDTextField:
            id: login_field
            text: ""
            text_color_normal: 0, 0, 0, 1
            hint_text: "login"
            icon_left: "account"
            size_hint_x: .9
            pos_hint: {"center_x": .5, "center_y": .5}

        PasswordField:
            id: password_container
            size_hint_x: .9
            pos_hint: {"center_x": .5, "center_y": .5}

        

        # MDWidget:
        #     size_hint_y: None
        #     size_hint_x: 1
        #     height: 1
        #     md_bg_color: app.theme_cls.primary_color 


        MDGridLayout:
            rows: 3
            cols: 2
            adaptive_height: True
            size_hint_x: .9
            pos_hint: {"center_x": .5, "center_y": .5}
            spacing: 2, 20

            MDLabel:
                id: label_connection
                text: "Connection check: \n none"
                font_size: "14sp"
                color: 0, 0, 0, 1
            MDFillRoundFlatButton:
                id: button_connection
                text: "connect"
                font_size: "14sp"
                size_hint_x: .7
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release:
                    root.crypt_input()
                    root.check_client()

            MDLabel:
                id: label_export
                text:"Last export: \n never"
                font_size: "14sp"
                color: 0, 0, 0, 1
            MDFillRoundFlatButton:
                id: button_export
                text: "export"
                font_size: "14sp"
                size_hint_x: .7
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: 
                    root.webdav_export()

            MDLabel:
                id: label_import
                text:"Last import: \n never"
                font_size: "14sp"
                color: 0, 0, 0, 1
            MDFillRoundFlatButton:
                id: button_import
                text: "import"
                font_size: "14sp"
                size_hint_x: .7
                pos_hint: {"center_x": .5, "center_y": .5}
                on_release: 
                    root.webdav_import()
                    app.root.get_screen(name="task list screen").ids.container.clear_widgets()
                    app.on_start()

        MDWidget:

<PasswordField>:
    size_hint_y: None
    height: password_field.height

    MDTextField:
        id: password_field
        hint_text: "password"
        text: ""
        password: True
        icon_left: "key-variant"

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .5}
        pos: password_field.width - self.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            password_field.password = False if password_field.password is True else True