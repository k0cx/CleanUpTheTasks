<TaskListScreen>:

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            # y: root.height - self.height
            type_height: "small"
            use_overflow: True
            elevation: 0
            opposite_colors: True
            title: "CUTT"
            anchor_title: "left"
            # left_action_items:  [["menu", lambda x: x]]
            right_action_items: [["magnify", lambda x: x], ["cog-outline", lambda x: root.open_settings()]]
        
        MDBottomNavigation:
            id: bottom_nav_bar
            panel_color: "#ee6002"
            selected_color_background: 0, 0, 0, .5
            text_color_active: "lightgrey"
            use_text: False
            # size_hint: 1, .5

            MDBottomNavigationItem:
                name: "tasks_list"
                text: "Tasks"
                icon: "format-list-text"
                # badge_icon: "numeric-10"
                on_tab_release: app.root.current = "task list screen"

                ScrollView:
                    pos_hint: {"center_y": .5, "center_x": .5}
                    size_hint_x: .9
                    bar_width: 5
                    do_scroll_x: False

                    MDList:
                        id: container

            MDBottomNavigationItem:
                name: "groups_view"
                text: "Groups view"
                icon: "collage"
                # badge_icon: "numeric-5"

                GroupsView:

            MDBottomNavigationItem:
                name: "edit_task"
                text: "Edit task"
                icon: "pencil-outline"
                on_tab_release:
                    app.root.transition.direction = "left"
                    app.root.current = "edit task screen"


<ListItemWithCheckbox>:
    id: the_list_item
    markup: True
    on_release:
        app.root.transition.direction = "left"
        app.root.current = "edit task screen"
        root.edit_task(the_list_item)

    LeftCheckbox:
        id: check
        on_release: 
            root.mark(check, the_list_item)
            app.root.get_screen(name="task list screen").ids.container.clear_widgets()
            app.on_start()
